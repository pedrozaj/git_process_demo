<UserControl x:Class="A35WPFSample.Views.PersonUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:A35WPFSample.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Border Background="Green" Height="50" >
            <Label Content="Selected Person" HorizontalAlignment="Center"  VerticalAlignment="Center" Foreground="White" />
        </Border>
        <TextBox Text="{Binding FirstName}" />
        <TextBox Text="{Binding LastName}" />
        <TextBox Text="{Binding Age}" />
        <TextBox Text="{Binding SelectedFavToy.NameForDisplay}" />
    </StackPanel>
</UserControl>
